@using System.Text.Json
@{
    ViewData["Title"] = "Randevu Bilgilerim";
    var doctor = ViewBag.Doctor as RandevuWeb.Models.Doctor;
    var appointments = ViewBag.Appointments as List<RandevuWeb.Models.Appointment> ?? new List<RandevuWeb.Models.Appointment>();
    var today = ViewBag.Today as DateTime? ?? DateTime.Today;
    var selectedDate = ViewBag.SelectedDate as DateTime? ?? DateTime.Today;
    var startOfWeek = ViewBag.StartOfWeek as DateTime? ?? DateTime.Today;
    var endOfWeek = ViewBag.EndOfWeek as DateTime? ?? DateTime.Today;
    var startOfMonth = ViewBag.StartOfMonth as DateTime? ?? DateTime.Today;
    var endOfMonth = ViewBag.EndOfMonth as DateTime? ?? DateTime.Today;
    var now = ViewBag.Now as DateTime? ?? DateTime.Now;
    var view = ViewBag.View as string ?? "week";
    
    var weekDates = new List<DateTime>();
    for (var date = startOfWeek; date < endOfWeek; date = date.AddDays(1))
    {
        weekDates.Add(date);
    }
    
    var todayAppointments = appointments.Where(a => a.Start.Date == today.Date).OrderBy(a => a.Start).ToList();
    var weekAppointments = appointments.Where(a => a.Start.Date >= startOfWeek && a.Start.Date < endOfWeek).ToList();
    var monthAppointments = appointments.Where(a => a.Start.Date >= startOfMonth && a.Start.Date < endOfMonth).ToList();
}

<div class="doctor-appointments-shell">
    <header class="doctor-appointments-header">
        <div>
            <h1>Randevu Bilgilerim</h1>
            <p class="subtext">@doctor?.Name - @doctor?.Specialty</p>
        </div>
        <div class="header-actions">
            <form method="post" action="@Url.Action("Logout", "DoctorAuth")" style="display: inline;">
                <button type="submit" class="btn btn-secondary">√áƒ±kƒ±≈ü Yap</button>
            </form>
        </div>
    </header>

    <div class="calendar-navigation-bar">
        <div class="nav-view-toggle">
            <a href="@Url.Action("MyAppointments", "DoctorAuth", new { id = doctor?.Id, date = selectedDate.ToString("yyyy-MM-dd"), view = "week" })" 
               class="view-toggle-btn @(view == "week" ? "active" : "")">
                üìÖ Haftalƒ±k
            </a>
            <a href="@Url.Action("MyAppointments", "DoctorAuth", new { id = doctor?.Id, date = selectedDate.ToString("yyyy-MM-dd"), view = "month" })" 
               class="view-toggle-btn @(view == "month" ? "active" : "")">
                üóìÔ∏è Aylƒ±k
            </a>
        </div>
        
        <div class="nav-date-controls">
            @if (view == "week")
            {
                <a href="@Url.Action("MyAppointments", "DoctorAuth", new { id = doctor?.Id, date = startOfWeek.AddDays(-7).ToString("yyyy-MM-dd"), view = "week" })" 
                   class="nav-arrow-btn">‚óÄ √ñnceki Hafta</a>
                
                <div class="current-period">
                    <strong>@startOfWeek.ToString("dd MMMM", new System.Globalization.CultureInfo("tr-TR")) - @endOfWeek.AddDays(-1).ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</strong>
                </div>
                
                <a href="@Url.Action("MyAppointments", "DoctorAuth", new { id = doctor?.Id, date = startOfWeek.AddDays(7).ToString("yyyy-MM-dd"), view = "week" })" 
                   class="nav-arrow-btn">Sonraki Hafta ‚ñ∂</a>
            }
            else
            {
                <a href="@Url.Action("MyAppointments", "DoctorAuth", new { id = doctor?.Id, date = startOfMonth.AddMonths(-1).ToString("yyyy-MM-dd"), view = "month" })" 
                   class="nav-arrow-btn">‚óÄ √ñnceki Ay</a>
                
                <div class="current-period">
                    <strong>@startOfMonth.ToString("MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</strong>
                </div>
                
                <a href="@Url.Action("MyAppointments", "DoctorAuth", new { id = doctor?.Id, date = startOfMonth.AddMonths(1).ToString("yyyy-MM-dd"), view = "month" })" 
                   class="nav-arrow-btn">Sonraki Ay ‚ñ∂</a>
            }
            
            <a href="@Url.Action("MyAppointments", "DoctorAuth", new { id = doctor?.Id, date = today.ToString("yyyy-MM-dd"), view = view })" 
               class="nav-today-btn">Bug√ºn</a>
        </div>
    </div>

    <section class="appointments-stats-bar">
        <div class="stat-item-small">
            <span class="stat-label-small">Bug√ºn</span>
            <strong class="stat-value-small">@todayAppointments.Count</strong>
        </div>
        @if (view == "week")
        {
            <div class="stat-item-small">
                <span class="stat-label-small">Bu Hafta</span>
                <strong class="stat-value-small">@weekAppointments.Count</strong>
            </div>
        }
        else
        {
            <div class="stat-item-small">
                <span class="stat-label-small">Bu Ay</span>
                <strong class="stat-value-small">@monthAppointments.Count</strong>
            </div>
        }
        <div class="stat-item-small">
            <span class="stat-label-small">Toplam</span>
            <strong class="stat-value-small">@appointments.Count</strong>
        </div>
    </section>

    <div class="calendar-view-container">
        @if (view == "month")
        {
            <div class="calendar-month-view">
                <div class="month-grid">
                    @{
                        var firstDayOfMonth = startOfMonth;
                        var lastDayOfMonth = endOfMonth.AddDays(-1);
                        var firstDayOfWeek = (int)firstDayOfMonth.DayOfWeek;
                        if (firstDayOfWeek == 0) firstDayOfWeek = 7; // Monday = 1
                        firstDayOfWeek--; // Make Monday = 0
                        
                        var daysInMonth = lastDayOfMonth.Day;
                        var totalCells = firstDayOfWeek + daysInMonth;
                        var weeksInMonth = (int)Math.Ceiling(totalCells / 7.0);
                    }
                    
                    <div class="month-weekdays">
                        <div class="month-weekday">Pzt</div>
                        <div class="month-weekday">Sal</div>
                        <div class="month-weekday">√áar</div>
                        <div class="month-weekday">Per</div>
                        <div class="month-weekday">Cum</div>
                        <div class="month-weekday">Cmt</div>
                        <div class="month-weekday">Paz</div>
                    </div>
                    
                    <div class="month-days-grid">
                        @for (int i = 0; i < firstDayOfWeek; i++)
                        {
                            <div class="month-day empty"></div>
                        }
                        
                        @for (int day = 1; day <= daysInMonth; day++)
                        {
                            var currentDate = new DateTime(startOfMonth.Year, startOfMonth.Month, day);
                            var isToday = currentDate.Date == today.Date;
                            var dayAppointments = monthAppointments.Where(a => a.Start.Date == currentDate.Date).ToList();
                            
                            <div class="month-day @(isToday ? "today" : "")">
                                <div class="month-day-number">@day</div>
                                @if (dayAppointments.Any())
                                {
                                    <div class="month-day-appointments">
                                        @foreach (var apt in dayAppointments.Take(3))
                                        {
                                            var statusClass = (apt.Status ?? string.Empty).Replace(" ", string.Empty).ToLowerInvariant();
                                            <div class="month-appointment-dot @statusClass" 
                                                 title="@apt.Start.ToString("HH:mm") - @apt.PatientName"></div>
                                        }
                                        @if (dayAppointments.Count > 3)
                                        {
                                            <div class="month-appointment-more">+@(dayAppointments.Count - 3)</div>
                                        }
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        @if (view == "week")
        {
            <div class="calendar-week-view">
                <div class="calendar-time-column">
                <div class="time-header"></div>
                @for (int hour = 8; hour < 20; hour++)
                {
                    <div class="time-slot">
                        <span class="time-label">@hour.ToString("00"):00</span>
                    </div>
                }
            </div>
            
            <div class="calendar-days-container">
                <div class="calendar-days-header">
                    @foreach (var date in weekDates)
                    {
                        var isToday = date.Date == today.Date;
                        var dayAppointments = weekAppointments.Where(a => a.Start.Date == date.Date).ToList();
                        <div class="day-header @(isToday ? "today" : "")">
                            <div class="day-name">@date.ToString("dddd", new System.Globalization.CultureInfo("tr-TR"))</div>
                            <div class="day-number">@date.Day</div>
                            <div class="day-count">@dayAppointments.Count</div>
                        </div>
                    }
                </div>
                
                <div class="calendar-days-body">
                    @foreach (var date in weekDates)
                    {
                        var dayAppointments = weekAppointments
                            .Where(a => a.Start.Date == date.Date)
                            .OrderBy(a => a.Start)
                            .ToList();
                        <div class="day-column">
                            @for (int hour = 8; hour < 20; hour++)
                            {
                                <div class="time-cell" data-hour="@hour" data-date="@date.ToString("yyyy-MM-dd")"></div>
                            }
                            
                            @foreach (var apt in dayAppointments)
                            {
                                var startHour = apt.Start.Hour;
                                var startMinute = apt.Start.Minute;
                                var duration = apt.DurationMinutes;
                                var top = ((startHour - 8) * 60 + startMinute) * 0.8;
                                var height = duration * 0.8;
                                var statusClass = (apt.Status ?? string.Empty).Replace(" ", string.Empty).ToLowerInvariant();
                                
                                <div class="appointment-block @statusClass" 
                                     style="top: @(top)px; height: @(height)px;"
                                     data-start="@apt.Start.ToString("HH:mm")"
                                     data-end="@apt.End.ToString("HH:mm")"
                                     data-patient="@apt.PatientName"
                                     data-procedure="@apt.Procedure">
                                    <div class="appointment-time-small">@apt.Start.ToString("HH:mm")</div>
                                    <div class="appointment-patient-small">@apt.PatientName</div>
                                    @if (!string.IsNullOrWhiteSpace(apt.Procedure))
                                    {
                                        <div class="appointment-procedure-small">@apt.Procedure</div>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            </div>
        }
    </div>

    <section class="today-appointments-list panel">
        <div class="panel-head">
            <div>
                <h2>Bug√ºn√ºn Randevularƒ±</h2>
                <p class="subtext">@today.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</p>
            </div>
        </div>
        <div class="appointments-timeline-list">
            @if (todayAppointments.Any())
            {
                @foreach (var apt in todayAppointments)
                {
                    var statusClass = (apt.Status ?? string.Empty).Replace(" ", string.Empty).ToLowerInvariant();
                    var procedureDetails = new List<object>();
                    
                    if (!string.IsNullOrWhiteSpace(apt.ProcedureDetails))
                    {
                        try
                        {
                            procedureDetails = JsonSerializer.Deserialize<List<object>>(apt.ProcedureDetails) ?? new List<object>();
                        }
                        catch { }
                    }
                    
                    <article class="appointment-timeline-item">
                        <div class="timeline-time">@apt.Start.ToString("HH:mm")</div>
                        <div class="timeline-content">
                            <div class="timeline-header">
                                <strong>@apt.PatientName</strong>
                                <span class="status-pill status-@statusClass">@apt.Status</span>
                            </div>
                            @if (procedureDetails.Any())
                            {
                                <div class="timeline-procedures">
                                    @foreach (var detail in procedureDetails)
                                    {
                                        var detailDict = detail as JsonElement?;
                                        if (detailDict.HasValue)
                                        {
                                            var detailObj = detailDict.Value;
                                            var procedure = detailObj.TryGetProperty("procedure", out var proc) ? proc.GetString() : "";
                                            var teeth = detailObj.TryGetProperty("teeth", out var teethProp) 
                                                ? teethProp.EnumerateArray().Select(t => t.GetString()).Where(t => !string.IsNullOrWhiteSpace(t)).Select(t => t!).ToList()
                                                : new List<string>();
                                            
                                            if (!string.IsNullOrWhiteSpace(procedure))
                                            {
                                                <div class="procedure-timeline">
                                                    <span class="procedure-name">@procedure</span>
                                                    @if (teeth.Any())
                                                    {
                                                        <div class="procedure-teeth-timeline">
                                                            @foreach (var tooth in teeth)
                                                            {
                                                                <span class="tooth-badge-mini">@tooth</span>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            }
                            else if (!string.IsNullOrWhiteSpace(apt.Procedure))
                            {
                                <div class="timeline-procedure-simple">@apt.Procedure</div>
                            }
                            @if (!string.IsNullOrWhiteSpace(apt.Notes))
                            {
                                <div class="timeline-notes">üìù @apt.Notes</div>
                            }
                            <div class="timeline-meta">
                                <span>‚è±Ô∏è @apt.DurationMinutes dakika</span>
                            </div>
                        </div>
                    </article>
                }
            }
            else
            {
                <div class="empty-state">
                    <p>Bug√ºn i√ßin randevu bulunmamaktadƒ±r.</p>
                </div>
            }
        </div>
    </section>
</div>

